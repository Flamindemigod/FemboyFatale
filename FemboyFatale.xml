<?xml version="1.0"?>
<GuiXml>
  <Controls layer="CONTROLS">
    <!--Yoinked from BTG 
        https://github.com/Fostecks/BuffTheGroup
        Basically the same. Just modifyied some ids to better fit
    -->
    <!--Default BTG Player Tracking Panel
        Lacks the Buff Icons
    -->
    <Control name="FFBuffPanel" resizeToFitDescendents="true" hidden="true" virtual="true">
    <!-- Background -->
      <Controls>
        <Backdrop name="$(parent)Container">
          <Anchor point="LEFT" />
          <Dimensions x="160" y="24" />
        </Backdrop>
        <Backdrop name="$(parent)Backdrop">
          <Anchor point="LEFT" />
          <Dimensions x="160" y="24" />
        </Backdrop>

        <!-- Player Role Icon -->
        <Texture name="$(parent)Role">
          <Anchor point="LEFT" offsetX="2"/>
          <Dimensions x="20" y="20" />
        </Texture>

        <!-- Player Name -->
        <Label name="$(parent)Name" font="$(GAMEPAD_MEDIUM_FONT)|$(KB_17)|soft-shadow-thin" wrapMode="ELLIPSIS" horizontalAlignment="LEFT" verticalAlignment="CENTER" >
          <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$(parent)Role" offsetX="2"/>
          <Dimensions x="106" y="24" offsetY="-1" />
        </Label>

        <!-- Player Stat -->
        <Label name="$(parent)Stat" font="$(GAMEPAD_MEDIUM_FONT)|$(KB_17)|soft-shadow-thin" wrapMode="TRUNCATE" horizontalAlignment="RIGHT" verticalAlignment="CENTER" >
          <Anchor point="RIGHT" offsetX="-4"/>
          <Dimensions x="50" y="24" />
        </Label>
      </Controls>
    </Control>
    <!--Top Level BTG Control
        Contains the Buff Icon
        A small control for the minimal mode
    -->
    <TopLevelControl name="FFBuffFrame" resizeToFitDescendents="true" mouseEnabled="true" movable="true" clampedToScreen="true" hidden="true" virtual="true">
      <!--Buff Icon--> 
      <Controls>
        <Texture name ="$(parent)Icon">
            <Anchor point="BOTTOM" relativeTo="$(parent)" relativePoint="TOP" />
            <Dimensions x="36" y="36"/>
        </Texture>
      </Controls>
    </TopLevelControl>

    <Control virtual="true" name="FFBar">
      <OnInitialized>
        self.barLabel = self:GetNamedChild("Label")
        self.bar = self:GetNamedChild("StatusBar")
        self.bg = self:GetNamedChild("Backdrop")
        self:SetHeight(self.barLabel:GetHeight() + self.bar:GetHeight())
        self:SetWidth(math.max(self.barLabel:GetWidth(), self.bar:GetWidth()))
        self.bg:SetHeight(self:GetHeight())
        self.bg:SetWidth(self:GetWidth())
      </OnInitialized>
      <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT"/>
      <Controls>
           <Backdrop name="$(parent)Backdrop" centerColor="1e1e1e" edgeColor="00000000" alpha="0.6" >
              <Anchor point="TOPLEFT"  relativeTo="$(parent)" relativePoint="TOPLEFT"/>
           </Backdrop>
           <Label name="$(parent)Label" font="$(GAMEPAD_MEDIUM_FONT)|32|soft-shadow-thin" color="ffffff" text="StatusBar" verticalAlignment="CENTER" horizontalAlignment="LEFT" offsetX="4"  alpha="0.85">			
              <Dimensions x="400" />
              <Anchor point="TOPLEFT"  relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="0" offsetY="0"/>
           </Label>
           <StatusBar name="$(parent)StatusBar" color="8A2BE2" alpha="1">
              <Dimensions x="400" y="30" />
              <Anchor point="TOPLEFT" relativeTo="$(parent)Label" relativePoint="BOTTOMLEFT" offsetX="0" offsetY="0"/>
              <Limits min="0" max="100" />
           </StatusBar>
        </Controls>

      </Control>
    <Control virtual="true" name="FFSlice">
      <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT"/>
      <!-- <Dimensions y="30"/> -->
      <!-- <Controls> -->
      <!--   <Label name="$(parent)Label" width="200" height="25" font="ZoFontWinH1" inheritAlpha="true" color="FF0000" wrapMode="TRUNCATE" verticalAlignment="TOP" horizontalAlignment="CENTER" text="Fighting!"> -->
      <!--     <Anchor point="TOP" relativeTo="$(parent)" relativePoint="TOP"/> -->
      <!--   </Label> -->
      <!-- </Controls> -->
    </Control>
    <TopLevelControl name="FemboyFataleStack" mouseEnabled="true" movable="true" clampedToScreen="true" resizeToFitDescendents="true">
      <!-- <Dimensions x="200"/> -->
      <Anchor point="BOTTOM" relativeTo="GuiRoot" relativePoint="CENTER" offsetY="-20"/>
    </TopLevelControl>
  </Controls>
</GuiXml>
